<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:background="@drawable/goldframe"
    android:padding="30dp">
    
     <ImageView 
        android:id="@+id/artitem_img"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp" />
     <LinearLayout
        android:id="@+id/leftblock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginRight ="8dp"
        android:layout_alignLeft="@+id/artitem_title"
        android:layout_alignTop="@+id/artitem_title"
        android:layout_toLeftOf="@+id/artitem_img"
        android:orientation="vertical" >

		      <TextView 
		        android:id="@+id/artitem_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:textStyle="bold"
		        android:typeface="serif"
		        android:textSize="30dp"
		        android:textColor="#FFFF00"
		        android:layout_marginTop="5dp" />
		      
		      <TextView 
		        android:id="@+id/artitem_price"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:typeface="serif"
		        android:textSize="20dp"
		        android:textColor="#FFFF00"
		        android:layout_marginBottom="5dp" />
		     
		     <TextView 
		        android:id="@+id/artitem_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:typeface="serif"
		        android:textSize="18dp"
		        android:textColor="#FFFFFF"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp" />
		     </LinearLayout>
        
</LinearLayout>